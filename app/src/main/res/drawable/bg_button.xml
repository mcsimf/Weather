<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">

            <solid android:color="@color/white_trans" />
            <corners android:radius="@dimen/double_space" />

            <padding android:bottom="@dimen/single_space" android:left="@dimen/single_space" android:right="@dimen/single_space" android:top="@dimen/single_space" />

        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid android:color="@color/white_trans_pressed" />
            <corners android:radius="@dimen/double_space" />

            <padding android:bottom="@dimen/single_space" android:left="@dimen/single_space" android:right="@dimen/single_space" android:top="@dimen/single_space" />

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_trans" />
            <corners android:radius="@dimen/double_space" />
            <padding android:bottom="@dimen/single_space" android:left="@dimen/single_space" android:right="@dimen/single_space" android:top="@dimen/single_space" />

        </shape>
    </item>

</selector>